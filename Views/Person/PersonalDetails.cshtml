
@{
    ViewData["Title"] = "PersonalDetails";
}

<h1>Personal Details</h1>

<form asp-action="PersonalDetails">

    <table class="table">
    <tr>
        <td>
            Enter Your Name:
        </td>
    </tr>
    <tr>
        <td>
                <input type="text" name="personname" id="personname" />

        </td>
    </tr>
    <tr>
        <td>
            Enter your Email:
        </td>
    </tr>
    <tr>
        <td>
            @Html.TextBox("email")
        </td>
</tr>
     <tr>
         <td>
             Select City:
         </td>
         <td>
                @Html.DropDownList("cities")

         </td>
     </tr>
        <tr>
            <td>
                
            </td>
            <td>
                <input type="submit" value="Save" class="btn btn-primary" />
            </td>
        </tr>

    
</table>

</form>
